# EditorConfig is awesome: http://EditorConfig.org

# Top-Most Configuration File
root = true

# Default Formatting
# Indent by four spaces and insert final new-line
[*]
indent_style = space
indent_size = 4
insert_final_newline = true

# XML Project Files
[*.{csproj,proj}]
indent_style = space
indent_size = 2
insert_final_newline = false

# XML Build, Configuration, and Resource Files
[*.{config,nuspec,props,resx,ruleset,targets,tasks}]
indent_style = space
indent_size = 2
insert_final_newline = false

# XML Markup Files
[*.{xml,xaml}]
indent_style = space
indent_size = 2
insert_final_newline = false
